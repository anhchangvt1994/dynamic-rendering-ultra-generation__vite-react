{
  "name": "vite-project-react",
  "private": true,
  "type": "module",
  "version": "0.0.0",
  "root": true,
  "workspaces": [
    "config/*",
    "server"
  ],
  "scripts": {
    "dev": "node config/scripts/dev.mjs",
    "build": "node config/scripts/build.mjs",
    "build:esm": "node config/scripts/build:esm.mjs",
    "preview": "node config/scripts/preview.mjs",
    "start": "node config/scripts/start.mjs",
    "start:pm2:worker": "node config/scripts/start:pm2:worker.mjs",
    "prettier": "node config/scripts/prettier.mjs",
    "lint": "node config/scripts/lint.mjs",
    "lint:fix": "npm run lint -- --fix",
    "prettier:fix": "npm run prettier -- --write",
    "format": "npm run prettier:fix && npm run lint:fix",
    "pre-commit": "node config/scripts/pre-commit.mjs",
    "prepare": "node config/scripts/prepare.mjs",
    "preinstall": "node server/src/utils/GenerateServerInfo.js",
    "server-build": "node config/scripts/server-build.mjs"
  },
  "engines": {
    "node": ">=20.x.x"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "dependencies": {
    "@reduxjs/toolkit": "^2.11.2",
    "blurhash": "^2.0.5",
    "polished": "^4.2.2",
    "react": "19.2.0",
    "react-blurhash": "^0.3.0",
    "react-dom": "19.2.0",
    "react-redux": "^9.2.0",
    "react-router": "^7.0.0",
    "styled-components": "^6.1.18"
  },
  "devDependencies": {
    "build-tool-packages": "file:./config/build-tool-packages",
    "commit-packages": "file:./config/commit-packages",
    "lint-and-format-packages": "file:./config/lint-and-format-packages",
    "server": "file:./server"
  },
  "prettier": "./config/prettier.config.cjs",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "npm run prettier:fix && npm run lint"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "feat",
          "style",
          "test",
          "fix",
          "docs",
          "release",
          "update",
          "perf",
          "chore"
        ]
      ]
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-git",
      "czConfig": "./config/cz.config.cjs"
    }
  },
  "packageManager": "yarn@1.22.22"
}
